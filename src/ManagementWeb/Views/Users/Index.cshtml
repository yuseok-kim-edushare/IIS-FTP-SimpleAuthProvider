@model IIS.FTP.ManagementWeb.Models.UserListViewModel
@{
    ViewBag.Title = "Users";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex align-items-center mb-4">
            <div class="p-3 bg-gradient text-white rounded shadow-lg me-3">
                <i class="bi bi-people fs-1"></i>
            </div>
            <div>
                <h1 class="display-4 fw-bold text-primary mb-1">Users</h1>
                <p class="text-muted">Manage FTP user accounts and permissions</p>
            </div>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-6">
        @using (Html.BeginForm("Index", "Users", FormMethod.Get, new { @class = "d-flex" }))
        {
            <div class="input-group shadow rounded">
                @Html.TextBox("search", Model.SearchTerm, new { @class = "form-control", placeholder = "Search users..." })
                <button class="btn btn-primary" type="submit">
                    <i class="bi bi-search"></i> Search
                </button>
                @if (!string.IsNullOrWhiteSpace(Model.SearchTerm))
                {
                    <a href="@Url.Action("Index", "Users")" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Clear
                    </a>
                }
            </div>
        }
    </div>
    <div class="col-md-6 text-end">
        <a href="@Url.Action("Create", "Users")" class="btn btn-success btn-lg shadow">
            <i class="bi bi-person-plus me-2"></i> Add New User
        </a>
    </div>
</div>

@if (Model.Users.Any())
{
    <div class="card shadow">
        <div class="card-header bg-light">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0 fw-bold">User Accounts (@Model.TotalCount total)</h5>
                <div>
                    @if (!string.IsNullOrWhiteSpace(Model.SearchTerm))
                    {
                        <span class="badge bg-primary">
                            <i class="bi bi-search me-1"></i> "@Model.SearchTerm"
                        </span>
                    }
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th class="fw-semibold">User ID</th>
                            <th class="fw-semibold">Display Name</th>
                            <th class="fw-semibold">Home Directory</th>
                            <th class="fw-semibold">Permissions</th>
                            <th class="fw-semibold text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Users)
                        {
                            <tr>
                                <td class="align-middle">
                                    <div class="d-flex align-items-center">
                                        <div class="p-2 bg-primary bg-opacity-10 rounded me-2">
                                            <i class="bi bi-person text-primary"></i>
                                        </div>
                                        <span class="fw-semibold">@user.UserId</span>
                                    </div>
                                </td>
                                <td class="align-middle">@user.DisplayName</td>
                                <td class="align-middle">
                                    <code class="bg-light text-dark px-2 py-1 rounded small">@user.HomeDirectory</code>
                                </td>
                                <td class="align-middle">
                                    <span class="badge bg-info">
                                        <i class="bi bi-shield-check me-1"></i>
                                        @user.PermissionCount permissions
                                    </span>
                                </td>
                                <td class="align-middle text-end">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a href="@Url.Action("Edit", "Users", new { id = user.UserId })" 
                                           class="btn btn-outline-primary" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a href="@Url.Action("ChangePassword", "Users", new { id = user.UserId })" 
                                           class="btn btn-outline-warning" title="Change Password">
                                            <i class="bi bi-key"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", "Users", new { id = user.UserId })" 
                                           class="btn btn-outline-danger" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    if (Model.TotalCount > Model.PageSize)
    {
        <nav aria-label="User pagination" class="mt-4">
            <ul class="pagination justify-content-center">
                @{
                    var totalPages = (int)Math.Ceiling((double)Model.TotalCount / Model.PageSize);
                    var currentPage = Model.CurrentPage;
                    var searchParam = !string.IsNullOrWhiteSpace(Model.SearchTerm) ? new { search = Model.SearchTerm } : null;
                }
                
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    @Html.ActionLink("Previous", "Index", "Users", 
                        new { page = currentPage - 1, search = Model.SearchTerm }, 
                        new { @class = "page-link" })
                </li>
                
                @for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        @Html.ActionLink(i.ToString(), "Index", "Users", 
                            new { page = i, search = Model.SearchTerm }, 
                            new { @class = "page-link" })
                    </li>
                }
                
                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                    @Html.ActionLink("Next", "Index", "Users", 
                        new { page = currentPage + 1, search = Model.SearchTerm }, 
                        new { @class = "page-link" })
                </li>
            </ul>
        </nav>
    }
}
else
{
    <div class="card shadow">
        <div class="card-body text-center py-5">
            <div class="mb-4">
                @if (!string.IsNullOrWhiteSpace(Model.SearchTerm))
                {
                    <i class="bi bi-search display-1 text-muted"></i>
                }
                else
                {
                    <i class="bi bi-people display-1 text-muted"></i>
                }
            </div>
            <div>
                @if (!string.IsNullOrWhiteSpace(Model.SearchTerm))
                {
                    <h4 class="fw-bold mb-3">No users found</h4>
                    <p class="text-muted mb-3">No users found matching your search criteria "<strong>@Model.SearchTerm</strong>".</p>
                    <a href="@Url.Action("Index", "Users")" class="btn btn-primary">
                        <i class="bi bi-arrow-left me-1"></i> View All Users
                    </a>
                }
                else
                {
                    <h4 class="fw-bold mb-3">No users yet</h4>
                    <p class="text-muted mb-3">No users have been created yet. Get started by creating your first user account.</p>
                    <a href="@Url.Action("Create", "Users")" class="btn btn-success btn-lg">
                        <i class="bi bi-person-plus me-2"></i> Create First User
                    </a>
                }
            </div>
        </div>
    </div>
} 