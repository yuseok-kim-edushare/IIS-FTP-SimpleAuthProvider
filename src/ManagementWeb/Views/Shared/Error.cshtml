@{
    ViewBag.Title = "Error";
}

<div class="row">
    <div class="col-12 text-center">
        <div class="error-page">
            <h1 class="display-1 text-danger">
                <i class="bi bi-exclamation-triangle"></i>
            </h1>
            <h2>Oops! Something went wrong.</h2>
            <p class="lead">We're sorry, but an error occurred while processing your request.</p>
            
            <div class="mt-4">
                <a href="@Url.Action("Index", "Dashboard")" class="btn btn-primary">
                    <i class="bi bi-house"></i> Go to Dashboard
                </a>
                <a href="javascript:history.back()" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Go Back
                </a>
            </div>
            
            @if (ViewData.Model != null)
            {
                <div class="mt-5">
                    <details class="text-start">
                        <summary class="cursor-pointer">Technical Details</summary>
                        <pre class="mt-2 p-3 bg-light rounded">@ViewData.Model</pre>
                    </details>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .error-page {
        padding: 60px 0;
    }
    .cursor-pointer {
        cursor: pointer;
    }
</style> 